1B_6
#include <stdio.h>
#include <stdlib.h>
//Wap to accept a number and display sum of the numbers from 1 to that number
int main()
{
  int n, num;
  int sum = 0;
  printf("Please enter a number: ");
  scanf("%d", &n);
  num = n;
  while (n>=1)
  {
      sum = sum+n;
            n--;
  }
  printf("The sum of numbers from 1 to %d is: %d", num, sum);
}

