#include <stdio.h>
#include <stdlib.h>
//Wap to display the sum of all the even numbers from 1 to n.
int main()
{
  int num, sum = 0;
  int i = 1;
  printf("Enter a number: ");
  scanf("%d", &num);
  while(i<=num)
  {
     if(i%2 == 0)
     {
         sum = sum + i;
     }

     i++;
  }
  printf("The sum of all the even numbers from 2 to %d is : %d", num, sum);
}
