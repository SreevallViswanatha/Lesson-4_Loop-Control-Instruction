#include <stdio.h>
#include <stdlib.h>
//Wap to accept a number and display the sum of its digits.
int main()
{
  int num, rem, sum = 0;

  printf("Enter a number: ");
  scanf("%d", &num);
  while(num>0)
  {
      rem = num%10;
      num = num/10;
      sum = sum +rem;
  }
  printf("The sum of the digits is : %d", sum);
}
